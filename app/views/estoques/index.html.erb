<p id="notice"><%= notice %></p>

<h1>Estoques</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data criacao</th>
      <th>Produtos</th>
      <th>Categoria</th>
      <th>Valor total</th>
      <th>Peso</th>
      <th>Data validade</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estoques.each do |estoque| %>
      <tr>
        <td><%= estoque.nome %></td>
        <td><%= estoque.data_criacao %></td>
        <td><%= estoque.produtos_id %></td>
        <td><%= estoque.categoria %></td>
        <td><%= estoque.valor_total %></td>
        <td><%= estoque.peso %></td>
        <td><%= estoque.data_validade %></td>
        <td><%= link_to 'Show', estoque %></td>
        <td><%= link_to 'Edit', edit_estoque_path(estoque) %></td>
        <td><%= link_to 'Destroy', estoque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Estoque', new_estoque_path %>
